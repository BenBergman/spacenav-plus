src = $(wildcard src/*.c) $(wildcard src/serial/*.c)
hdr = $(wildcard src/*.h) $(wildcard src/serial/*.h)
obj = $(src:.c=.o)
bin = spacenavd
ctl = spnavd_ctl

CC = gcc
INSTALL = install
CFLAGS = -pedantic -Wall $(dbg) $(opt) -fno-strict-aliasing -I$(srcdir)/src -I/usr/local/include
LDFLAGS = -L/usr/local/lib $(xlib)

$(bin): $(obj)
	$(CC) -o $@ $(obj) $(LDFLAGS)

tags: $(src) $(hdr)
	ctags $(src) $(hdr)

%.o: $(srcdir)/%.c
	$(CC) $(CFLAGS) -c $< -o $@

.PHONY: clean
clean:
	rm -f $(obj) $(bin)

.PHONY: install
install: $(bin)
	$(INSTALL) -d $(PREFIX)/bin
	$(INSTALL) -m 755 $(bin) $(PREFIX)/bin/$(bin)
	$(INSTALL) -m 755 $(srcdir)/$(ctl) $(PREFIX)/bin/$(ctl)
	cd $(srcdir) && ./setup_init --no-install

#	[ -d /etc/hal/fdi/policy ] && \
#		$(INSTALL) -m 644 spacenav.fdi /etc/hal/fdi/policy/spacenav.fdi

.PHONY: uninstall
uninstall:
	rm -f $(PREFIX)/bin/$(bin)
	rm -f $(PREFIX)/bin/$(ctl)
	rm -f /etc/hal/fdi/policy/spacenav.fdi

